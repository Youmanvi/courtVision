      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Register successful - Status 201', function() {",
                  "  pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test('Response has success flag', function() {",
                  "  var jsonData = pm.response.json();",
                  "  pm.expect(jsonData.success).to.be.true;",
                  "});",
                  "",
                  "pm.test('Response contains message', function() {",
                  "  var jsonData = pm.response.json();",
                  "  pm.expect(jsonData.message).to.exist;",
                  "});",
                  "",
                  "pm.test('Response contains JWT token', function() {",
                  "  var jsonData = pm.response.json();",
                  "  pm.expect(jsonData.data.token).to.exist;",
                  "  pm.collectionVariables.set('authToken', jsonData.data.token);",
                  "});",
                  "",
                  "pm.test('User data includes ID and username', function() {",
                  "  var jsonData = pm.response.json();",
                  "  pm.expect(jsonData.data.id).to.exist;",
                  "  pm.expect(jsonData.data.username).to.equal('testuser123');",
                  "  pm.collectionVariables.set('userId', jsonData.data.id);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser123\",\n  \"email\": \"testuser@example.com\",\n  \"password\": \"TestPassword123!\",\n  \"solanaWallet\": \"11111111111111111111111111111112\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
